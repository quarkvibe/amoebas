{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/cli",
    "rootDir": "./cli",
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "esModuleInterop": true,
    "declaration": false,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": [
    "cli/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "server"
  ]
}